  <!-- When submit the form, the view rendered will be the index view of our articles resource -->
  <h1 class="transbox search-font"> Search Playlists by Mood </h1>
  <%= form_tag(playlists_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append form-group">
      <%= text_field_tag :search, params[:search], placeholder: "Search Playlists", class: "form-control" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
           of using a Rails form helper -->
      <%= submit_tag "Search", class: "btn btn-default" %>
    </div>
  <% end %>

<div class ="transbox search-font row">


      <h1> <strong>Playlists</strong> </h1>
      <% @playlists.each do |playlist| %>
         <div class="playlist col-md-8 col-md-offset-2">
            <div class="panel playlist-pan" id="playlist-display">
               <div class="panel-heading">
                  <h1> <%= link_to playlist.title, "/play/#{playlist.title}"%> </h1>
               </div>
               <div class="panel-body">
                  <h3> <small>Mood:</small> <%= playlist.mood %> </h3>
                  <div class="song-list">
                     <ol>
                     <% @names = playlist.names.split(',') %>
                     <% @names.each do |name| %>
                     <li class="text-left"> <%= name %> </li>
                     <% end %>
                     </ol>
                  </div>
               </div>
            </div>
         </div>
      <% end %>


</div>
